<?xml version="1.0" encoding="UTF-8"?>
<project name="module_netty" default="compile.module.netty">
  <dirname property="module.netty.basedir" file="${ant.file.module_netty}"/>
  
  <property name="module.jdk.home.netty" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.netty" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.netty" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.netty" value="-encoding UTF-8 -source 6 -target 6 ${compiler.args}"/>
  
  <property name="netty.output.dir" value="${module.netty.basedir}/target/classes"/>
  <property name="netty.testoutput.dir" value="${module.netty.basedir}/target/test-classes"/>
  
  <path id="netty.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="netty.module.production.classpath">
    <path refid="${module.jdk.classpath.netty}"/>
    <path refid="library.maven:_io.netty:netty-all:4.1.34.final.classpath"/>
  </path>
  
  <path id="netty.runtime.production.module.classpath">
    <pathelement location="${netty.output.dir}"/>
    <path refid="library.maven:_io.netty:netty-all:4.1.34.final.classpath"/>
  </path>
  
  <path id="netty.module.classpath">
    <path refid="${module.jdk.classpath.netty}"/>
    <pathelement location="${netty.output.dir}"/>
    <path refid="library.maven:_io.netty:netty-all:4.1.34.final.classpath"/>
  </path>
  
  <path id="netty.runtime.module.classpath">
    <pathelement location="${netty.testoutput.dir}"/>
    <pathelement location="${netty.output.dir}"/>
    <path refid="library.maven:_io.netty:netty-all:4.1.34.final.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.netty">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.netty">
    <patternset refid="excluded.from.module.netty"/>
  </patternset>
  
  <path id="netty.module.sourcepath">
    <dirset dir="${module.netty.basedir}">
      <include name="src/main/java"/>
      <include name="src/main/resources"/>
    </dirset>
  </path>
  
  <path id="netty.module.test.sourcepath">
    <dirset dir="${module.netty.basedir}">
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.netty" depends="compile.module.netty.production,compile.module.netty.tests" description="Compile module netty"/>
  
  <target name="compile.module.netty.production" depends="register.custom.compilers" description="Compile module netty; production classes">
    <mkdir dir="${netty.output.dir}"/>
    <javac2 destdir="${netty.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.netty}/javac">
      <compilerarg line="${compiler.args.netty}"/>
      <bootclasspath refid="netty.module.bootclasspath"/>
      <classpath refid="netty.module.production.classpath"/>
      <src refid="netty.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.netty"/>
    </javac2>
    
    <copy todir="${netty.output.dir}">
      <fileset dir="${module.netty.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.netty.basedir}/src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.netty.tests" depends="register.custom.compilers,compile.module.netty.production" description="compile module netty; test classes" unless="skip.tests">
    <mkdir dir="${netty.testoutput.dir}"/>
    <javac2 destdir="${netty.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.netty}/javac">
      <compilerarg line="${compiler.args.netty}"/>
      <bootclasspath refid="netty.module.bootclasspath"/>
      <classpath refid="netty.module.classpath"/>
      <src refid="netty.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.netty"/>
    </javac2>
    
    <copy todir="${netty.testoutput.dir}">
      <fileset dir="${module.netty.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.netty" description="cleanup module">
    <delete dir="${netty.output.dir}"/>
    <delete dir="${netty.testoutput.dir}"/>
  </target>
</project>